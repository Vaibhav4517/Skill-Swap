# Copy to .env and fill in your values

NODE_ENV=development
PORT=4000

# Your MongoDB Atlas connection string
MONGO_URI=mongodb+srv://<username>:<password>@<cluster-url>/<db>?retryWrites=true&w=majority
MONGO_DB=skillswap

# JWT secret used to sign tokens
JWT_SECRET=replace-with-a-strong-random-secret
JWT_REFRESH_SECRET=replace-with-another-strong-secret
ACCESS_TOKEN_TTL=15m
REFRESH_TOKEN_TTL=30d

# URL(s) of your frontend (for CORS). Single or comma-separated list
FRONTEND_URLS=https://your-frontend-on-vercel.vercel.app,http://localhost:3000

# Cookies
COOKIE_SECURE=false
# COOKIE_DOMAIN=.yourdomain.com

# Local dev convenience (optional)
# If true, server starts without connecting to MongoDB (only health route works reliably)
ALLOW_NO_DB=false

# Redis (optional for caching and Socket.IO adapter)
# For example: redis://default:<password>@<host>:<port>
REDIS_URL=
